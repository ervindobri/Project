<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.DetailFragment" android:id="@+id/frameLayout2"
        android:layout_gravity="center_horizontal|center_vertical">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scrollbars="none" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
    >
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout"
                android:gravity="bottom" android:layout_gravity="bottom">
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" app:cardCornerRadius="25dp" app:cardElevation="15dp"
                    android:layout_marginTop="35dp" android:layout_marginEnd="35dp" android:layout_marginStart="35dp"
                    android:layout_marginBottom="55dp"
                    app:cardBackgroundColor="#FFF9F9"
                    app:cardMaxElevation="15dp" android:minWidth="200dp"
                    android:layout_gravity="center_horizontal|center_vertical">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:gravity="top">
                    <com.glide.slider.library.SliderLayout
                            android:id="@+id/slider"
                            android:layout_width="match_parent"
                            android:layout_height="200dp">
                    </com.glide.slider.library.SliderLayout>
                    <com.glide.slider.library.indicators.PagerIndicator
                            android:id="@+id/custom_indicator"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"/>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:layout_marginTop="25dp"
                            android:layout_marginEnd="5dp" android:layout_marginStart="5dp"
                            android:layout_marginBottom="15dp" android:baselineAligned="false">
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:layout_weight="0"
                                android:layout_margin="15dp">
                            <TextView
                                    android:text="TextView"
                                    android:layout_width="wrap_content"
                                    android:autoSizeTextType="uniform"
                                    android:autoSizeMinTextSize="16sp"
                                    android:autoSizeMaxTextSize="18sp"
                                    android:autoSizeStepGranularity="2sp"
                                    android:layout_height="wrap_content" android:id="@+id/nameView"
                                    android:layout_weight="0" android:fontFamily="@font/raleway_bold"
                                    android:textSize="24sp"
                                    android:textColor="@color/colorAccent" android:maxWidth="150dp"/>
                            <TextView
                                    android:text="TextView"
                                    android:layout_width="wrap_content"
                                    android:autoSizeTextType="uniform"
                                    android:autoSizeMinTextSize="10sp"
                                    android:autoSizeMaxTextSize="14sp"
                                    android:autoSizeStepGranularity="2sp"
                                    android:layout_height="wrap_content" android:id="@+id/addressView"
                                    android:layout_weight="0" android:fontFamily="@font/raleway_semibold"
                                    android:textColor="#393939" android:maxWidth="150dp"
                                    android:layout_marginTop="3dp" android:layout_marginBottom="3dp"/>
                            <TextView
                                    android:text="Spain"
                                    android:autoSizeTextType="uniform"
                                    android:autoSizeMinTextSize="10sp"
                                    android:autoSizeMaxTextSize="14sp"
                                    android:autoSizeStepGranularity="2sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/cityView"
                                    android:layout_weight="0" android:fontFamily="@font/raleway_semibold"
                                    android:textColor="#393939" android:maxWidth="150dp" android:textSize="14sp"
                                    android:layout_marginTop="3dp" android:layout_marginBottom="3dp"/>
                            <TextView
                                    android:text="Area 51"
                                    android:autoSizeTextType="uniform"
                                    android:autoSizeMinTextSize="10sp"
                                    android:autoSizeMaxTextSize="14sp"
                                    android:autoSizeStepGranularity="2sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/areaView"
                                    android:layout_weight="0" android:fontFamily="@font/raleway_semibold"
                                    android:textColor="#393939" android:maxWidth="150dp" android:textSize="14sp"
                                    android:layout_marginTop="3dp" android:layout_marginBottom="3dp"/>
                        </LinearLayout>
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal|top" android:layout_marginStart="10dp"
                                android:minWidth="100dp" android:layout_marginTop="15dp"
                                android:layout_marginEnd="10dp">
                            <TextView
                                    android:text="$$$$"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:id="@+id/priceRangeView"
                                    android:layout_weight="0"
                                    android:layout_margin="10dp" android:fontFamily="@font/raleway_black"
                                    android:textSize="30sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center|center_horizontal"
                        android:foregroundGravity="center_vertical|center_horizontal"
                        android:clipToPadding="false" android:id="@+id/frameLayout3">

                    <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button.Icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FFFFFF"
                            android:textAlignment="viewEnd"
                            android:id="@+id/deleteImageButton"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:cornerRadius="15dp"
                            app:icon="@drawable/ic_baseline_delete_forever_24" app:iconPadding="0dp"
                            android:textSize="0sp" app:iconGravity="textEnd" android:minWidth="50dp"
                            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:gravity="bottom"
                    android:background="@drawable/rounded_image"
                    android:paddingBottom="25dp" android:minHeight="170dp">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:elevation="5dp">
                    <TextView
                            android:text="@string/actions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/actionsLabel"
                            android:fontFamily="@font/raleway_bold" android:layout_margin="25dp"
                            android:textColor="#FFFFFF" android:textSize="24sp"/>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:gravity="center_horizontal">
                        <androidx.cardview.widget.CardView
                                android:layout_width="65dp"
                                android:layout_height="65dp" android:layout_marginStart="15dp"
                                android:layout_marginEnd="15dp" app:cardCornerRadius="12dp"
                                android:layout_gravity="center_horizontal" android:id="@+id/favoriteCard">
                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_horizontal|center_vertical">
                                <androidx.cardview.widget.CardView
                                        android:layout_width="50dp"
                                        android:layout_height="50dp" app:cardBackgroundColor="@color/colorAccent"
                                        app:cardCornerRadius="90dp" app:cardElevation="5dp"
                                        android:foregroundGravity="center_vertical|center_horizontal"
                                        android:textAlignment="center" android:clickable="false">
                                    <ToggleButton
                                            android:id="@+id/button_favorite"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/sl_favourite_24dp"
                                            android:layout_margin="5dp"
                                            android:checked="false"
                                            android:text=""
                                            android:textOff=""
                                            android:textOn="" android:clickable="false"/>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                                android:layout_width="65dp"
                                android:layout_height="65dp" android:layout_marginStart="15dp"
                                android:layout_marginEnd="15dp" app:cardCornerRadius="12dp"
                                android:id="@+id/addImageCard">
                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_horizontal|center_vertical">
                                <androidx.cardview.widget.CardView
                                        android:layout_width="50dp"
                                        android:layout_height="50dp" app:cardBackgroundColor="#F57F17"
                                        app:cardCornerRadius="90dp" app:cardElevation="5dp"
                                        android:foregroundGravity="center_vertical|center_horizontal"
                                        android:textAlignment="center" android:clickable="false">

                                    <ImageView
                                            android:src="@drawable/ic_baseline_image_24"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent" android:id="@+id/imageView2"
                                            android:layout_margin="5dp"/>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                                android:layout_width="65dp"
                                android:layout_height="65dp" android:layout_marginStart="15dp"
                                android:layout_marginEnd="15dp" app:cardCornerRadius="12dp" android:id="@+id/mapCard">
                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_horizontal|center_vertical">
                                <androidx.cardview.widget.CardView
                                        android:layout_width="50dp"
                                        android:layout_height="50dp" app:cardBackgroundColor="#11AAC5"
                                        app:cardCornerRadius="90dp" app:cardElevation="5dp"
                                        android:foregroundGravity="center_vertical|center_horizontal"
                                        android:textAlignment="center" android:clickable="false">
                                    <CheckBox
                                            android:id="@+id/mapIcon"
                                            android:layout_width="45dp"
                                            android:layout_height="match_parent"
                                            android:button="@drawable/ic_baseline_gps_fixed_24"
                                            app:buttonTint="@android:color/white"
                                            android:textAlignment="gravity"
                                            android:gravity="center_horizontal|center_vertical"
                                            android:layout_gravity="center_horizontal|center_vertical"
                                            android:clickable="false"/>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                                android:layout_width="65dp"
                                android:layout_height="65dp" android:layout_marginStart="15dp"
                                android:layout_marginEnd="15dp" app:cardCornerRadius="12dp" android:id="@+id/callCard">
                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_horizontal|center_vertical">
                                <androidx.cardview.widget.CardView
                                        android:layout_width="50dp"
                                        android:layout_height="50dp" app:cardBackgroundColor="#8630FF"
                                        app:cardCornerRadius="90dp" app:cardElevation="5dp"
                                        android:foregroundGravity="center_vertical|center_horizontal"
                                        android:textAlignment="center" android:clickable="false">
                                    <CheckBox
                                            android:id="@+id/callIcon"
                                            android:layout_width="45dp"
                                            android:layout_height="match_parent"
                                            android:button="@drawable/ic_baseline_call_24"
                                            app:buttonTint="@android:color/white"
                                            android:textAlignment="gravity"
                                            android:gravity="center_horizontal|center_vertical"
                                            android:layout_gravity="center_horizontal|center_vertical"
                                            android:clickable="false"/>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>