<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".fragments.RestaurantListFragment" android:id="@+id/frameLayout">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:foregroundGravity="clip_horizontal|center_horizontal"
                android:textAlignment="gravity">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical" android:id="@+id/progress_bar"
                    android:indeterminate="true" android:progress="69" android:max="100" app:indicatorColor="#FF9999"
                    app:trackColor="@color/colorAccent"/>
        </FrameLayout>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/restaurantList"

                android:layout_height="match_parent"
                android:layout_marginBottom="0dp" android:layout_marginTop="0dp">
        </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>